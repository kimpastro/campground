<div class="px-40 mt-10">
  <%= link_to campgrounds_path, class: 'flex gap-x-2 p-2 items-center mb-12' do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
    </svg>
    <span>Back</span>
  <% end %>

  <p class="text-sm text-gray-400 text-center mb-4">(Simulating customer navigation)</p>

  <div class="flex flex-col gap-y-2">
    <span class="text-center text-4xl"><%= @campground.name %></span>

    <%= image_tag @campground.cover_photo_url %>
    <div class="flex gap-x-2 items-center text-green-500 text-lg font-semibold">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
      </svg>
      <span><%= "#{@campground.city} - #{@campground.state}" %></span>
    </div>

    <p><%= sanitize(@campground.overview.html_safe) %></p>

    <span class="text-center text-3xl my-3 pt-2 border-t">More Images</span>

    <div class="grid grid-cols-3 gap-3">
      <% @campground.contributed_photos.each do |photo_url| %>
        <%= image_tag photo_url, width: 500 %>
      <% end %>
    </div>
  </div>
</div>
